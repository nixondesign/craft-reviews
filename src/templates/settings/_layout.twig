{% extends "_layouts/cp" %}

{% set title = 'Settings' %}
{% set selectedSubnavItem = 'settings' %}

{% if selectedSidebarItem is not defined %}
    {% set selectedSidebarItem = craft.app.request.getSegment(3) %}
{% endif %}

{% set navItems = {
    'general': { title: 'General'|t('reviews') },
    'types': { title: 'Review Types'|t('reviews') },
} %}

{% block sidebar %}
    <nav>
        <ul>
            {% for handle, item in navItems %}
                {% if item.heading is defined %}
                    <li class="heading"><span>{{ item.heading }}</span></li>
                {% else %}
                    <li>
                        <a href="{{ url('reviews/settings/'~handle) }}"{% if handle == selectedSidebarItem %} class="sel"{% endif %}>{{ item.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>
{% endblock %}
